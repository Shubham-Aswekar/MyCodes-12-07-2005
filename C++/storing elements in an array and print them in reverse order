#include<iostream>
using namespace std;
int main(){
    int size;
    cout<<"Enter size of array: ";
    cin>>size;
    
    int arr[size];
    int i;
    cout<<"Enter elements in array: ";
    for(i=0;i<size;i++){
        cin>>arr[i];
    }
    
    for(i=0;i<size;i++){
        cout<<"element-"<<i<<":"<<arr[i]<<endl;
    }
    
    cout<<"Elements stored in the array are: ";
    for(i=0;i<size;i++){
        cout<<arr[i]<< " ";
    }
    
    cout<<endl;
    
    cout<<"Elements stored in array in reverse order are: ";
    for(i=size-1;i>=0;i--){
        cout<<arr[i]<<" ";
    }
    
    return 0;
}
