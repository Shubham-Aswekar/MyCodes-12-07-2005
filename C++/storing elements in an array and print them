#include<iostream>
using namespace std;
int main(){
    int size;
    cout<<"enter size of array: ";
    cin>>size;
    
    int arr[size];
    int i;
    cout<<"enter elements in array: ";
    for(i=0;i<size;i++){
        cin>>arr[i];
    }
    
    for(i=0;i<size;i++){
        cout<<"element-"<<i<<":"<<arr[i]<<endl;
    }
    
    cout<<"Elements stored in the array are: ";
    for(i=0;i<size;i++){
        cout<<arr[i]<< " ";
    }
    return 0;
}
