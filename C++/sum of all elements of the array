#include<iostream>
using namespace std;
int main(){
    int size;
    cout<<"Enter size of array: ";
    cin>>size;
    
    int arr[size];
    int i;
    cout<<"Enter elements in array: ";
    for(i=0;i<size;i++){
        cin>>arr[i];
    }
    
    for(i=0;i<size;i++){
        cout<<"element-"<<i<<":"<<arr[i]<<endl;
    }
    
    int sum=0;
    for(i=0;i<size;i++){
        sum=sum+arr[i];
    }
    cout<<"sum of elements stored in an array: "<<sum;
    return 0;
}
