#include<iostream>
using namespace std;
int main(){
    int size;
    cout<<"enter size of array: ";
    cin>>size;
    
    int i;
    int arr[size];
    cout<<"enter elements in array: ";
    for(i=0;i<size;i++){
        cin>>arr[i];
    }
    
    int largest=arr[0];
    for(i=0;i<size;i++){
        if(arr[i]>largest){
            largest=arr[i];
        }
    }
    cout<<"largest element: "<<largest<<endl;
    
    int secondlargest=largest;
    for(i=0;i<size;i++){
        if(arr[i]<largest){
            secondlargest=arr[i];
        }
    }
    cout<<"second largest element: "<<secondlargest<<endl;
    
    int thirdlargest=secondlargest;
    for(i=0;i<size;i++){
        if(arr[i]<secondlargest){
            thirdlargest=arr[i];
        }
    }
    
    cout<<"third largest element: "<<thirdlargest<<endl;
    return 0;
    
}
