#include<iostream>
using namespace std;
int main(){
    int size;
    cout<<"Enter size of array: ";
    cin>>size;
    
    int arr1[size];
    int arr2[size];
    int i;
    cout<<"Enter elements in array: ";
    for(i=0;i<size;i++){
        cin>>arr1[i];
    }
    
    for(i=0;i<size;i++){
        cout<<"element-"<<i<<":"<<arr1[i]<<endl;
    }
    
    cout<<"Elements stored in the first array are: ";
    for(i=0;i<size;i++){
        cout<<arr1[i]<< " ";
    } 
    
    cout<<endl; 
    
    for(i=0;i<size;i++){
        arr2[i]=arr1[i];
    }
    
    cout<<"Elements stored in the second array are: ";
    for(i=0;i<size;i++){
        cout<<arr2[i]<< " ";
    } 
    return 0;
}
